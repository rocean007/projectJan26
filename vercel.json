{
  "version": 2,
  "builds": [
    {
      "src": "gold_tracker/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "installCommand": "pip install --break-system-packages -r requirements.txt",
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/favicon\\.(ico|webp|png|svg|jpg)",
      "dest": "/public/favicon.webp"
    },
    {
      "src": "/(.*)",
      "dest": "gold_tracker/wsgi.py"
    }
  ]
}
